@{
    ViewBag.Title = "Manage";
}
<section>
    <h2>Manage</h2>
    <div class="tab-pane" id="B">
        <div class="hero-unit">
            <h1>Platform Sync</h1>
            <p>
                The local photos are not approved by default.
                <br /> 
                The sync service moderates the local photo status according to Pluck.
            </p>

            <button id="btnSync" class="btn-large btn-danger">
                <i class="icon-play icon-white"></i> Sync 'em
            </button>
            <div id="sync-workingMessage" class="alert alert-block hide span16">
                <button class="close" data-dismiss="alert">×</button>
                <strong>On it!</strong> Please wait while the moderation sync process does it's thing.
            </div>
            <div id="sync-successMessage" class="alert alert-success hide span16">
                <button class="close" data-dismiss="alert">×</button>
                <i class="icon-thumbs-up"></i> <strong>Well done!</strong> You're awesome.
            </div>

            <div id="sync-failMessage" class="alert alert-error hide span16">
                <button class="close" data-dismiss="alert">×</button>
                <i class="icon-thumbs-down"></i> <strong>Fail!</strong> Grab a beer, try again later.
            </div>
        </div>

        <div class="alert alert-info" class="span16">
            <h4>Sync Status:</h4>
            last run <span id="last-sync-date">@(ViewBag.UpdateModerationTaskLastRunDate == null ? "never" : ViewBag.UpdateModerationTaskLastRunDate)</span>
        </div>
        <div>
            <ul>
                <li>Manage Content</li>
                <li>Manage Files</li>
                <li>Manage Sweeps</li>
                <li>Manage Users</li>
                <li>View Analytics</li>
            </ul>
        </div>
    </div>
</section>
